<%= form_for(@pessoa) do |f| %>
  <% if @pessoa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h2>

      <ul>
      <% @pessoa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <% if current_pessoa && !(current_pessoa.professor || current_pessoa.coordenador || current_pessoa.diretor) %>
  <div class="field">
    <%= f.label "tipo de pessoa" %><br />
    <select id="tipo" name="tipo">
    	<option value="p">professor</option>
    	<option value="d">diretor</option>
    	<option value="c">coordenador</option>
    </select>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
