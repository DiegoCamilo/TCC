<h1>Listing turmas</h1>

<table>
  <tr>
    <th>Curso</th>
    <th>Periodo turma</th>
    <th>Turno</th>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @turmas.each do |turma| %>
  <tr>
    <td><%= turma.curso.nome %></td>
    <td><%= turma.periodo_turma %></td>
    <td><%= turma.turno %></td>
    <td><%= turma.nome %></td>
    <td><%= link_to 'Show', turma %></td>
    <td><%= link_to 'Edit', edit_turma_path(turma) %></td>
    <td><%= link_to 'Destroy', turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

